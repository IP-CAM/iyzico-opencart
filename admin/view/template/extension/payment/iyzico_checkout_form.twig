{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-free-checkout" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
       <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>{{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
         {% endif %}
		
	    {% if error_version %}
        <div class="alert alert-danger"><i class="fa fa-check-circle"></i>{{ error_version}} <a href="{{ version_update_link }}"><i class="fa fa-arrow-down"></i> {{ iyzico_update_button }}</a> {{ iyzico_or_text }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
             {% endif %}
		
        <div class="alert alert-info">
            <i class="fa fa-info-circle"></i>
           {{ text_iyzico_checkout_form_info }}
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}></h3>
            </div>
            <div class="panel-body">
                <form action=" {{ action }}" method="post" enctype="multipart/form-data" id="form-free-checkout" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">  {{ entry_api_id_live }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_iyzico_checkout_form_api_id_live" value="{{ payment_iyzico_checkout_form_api_id_live }}" class="form-control"/>
							  {% if error_api_id_live %}
						   <span class="text-danger">{{ error_api_id_live }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status"> {{ entry_secret_key_live }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_iyzico_checkout_form_secret_key_live" value="{{ payment_iyzico_checkout_form_secret_key_live }}" class="form-control"/>
							  {% if error_secret_key_live %}
                        
                            <span class="text-danger">{{ error_secret_key_live }}</span>
                             {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-iyzico-checkout-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_iyzico_checkout_form_status" class="form-control">
								  {% if payment_iyzico_checkout_form_status %}
                   
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                              {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                                  {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_iyzico_checkout_form_form_classs">{{ entry_class }}</label>
                        <div class="col-sm-10">
                            <select name="payment_iyzico_checkout_form_form_class" class="form-control">
								{% if payment_iyzico_checkout_form_form_class =="responsive" %}
                             
                                <option value="popup">{{ entry_class_popup }}</option>
                                <option value="responsive" selected="selected">{{ entry_class_responsive }}</option>
                                        {% else %}
                                <option value="popup" selected="selected">{{ entry_class_popup }}</option>
                                <option value="responsive">{{ entry_class_responsive }}</option>
                                 {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">
                            <span data-toggle="tooltip" title="{{ order_status_after_payment_tooltip }}">
                                {{ entry_order_status }}
                            </span>
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_iyzico_checkout_form_order_status_id" id="input-order-status" class="form-control">
                        
						{% for order_status in order_statuses %}
  	{% if order_status['order_status_id'] == payment_iyzico_checkout_form_order_status_id %}
 <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
          {% else %}
		    <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
			        {% endif %}
	{% endfor %}
		
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-cancel-order-status"><span data-toggle="tooltip" title="{{ order_status_after_cancel_tooltip }}">{{ entry_cancel_order_status }}</span></label>
                        <div class="col-sm-10">
                            <select name="payment_iyzico_checkout_form_cancel_order_status_id" id="input-cancel-order-status" class="form-control">
                               
					{% for order_status in order_statuses %}
					{% if order_status['order_status_id'] == payment_iyzico_checkout_form_cancel_order_status_id %}
					<option value="{{ order_status['order_status_id'] }}" selected="selected">{{order_status['name'] }}</option>
					{% else %}
					 <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
					        {% endif %}
						{% endfor %}
							  


								
								
								
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_iyzico_checkout_form_sort_order" value="{{ payment_iyzico_checkout_form_sort_order }}" size="1" class="form-control"/>
                        </div>
                    </div>
            </div>
        </div>
        </form>
    </div>
</div>
</div>
</div>
{{ footer }}